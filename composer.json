{
    "name": "sulu/sulu-standard",
    "license": "MIT",
    "type": "project",
    "description": "The sulu content management framework",
    "version": "dev-develop",
    "autoload": {
        "psr-0": {
            "": "src/"
        },
        "classmap": [
            "app/AbstractKernel.php",
            "app/WebsiteKernel.php",
            "app/WebsiteCache.php",
            "app/AdminKernel.php"
        ]
    },
    "require": {
        "php": ">=5.5.9",
        "symfony/symfony": "3.2.*",
        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "symfony/swiftmailer-bundle": "^2.3",
        "symfony/monolog-bundle": "^3.0",
        "symfony/polyfill-apcu": "^1.0",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "incenteev/composer-parameter-handler": "^2.0",

        "twig/extensions": "~1.0",
        "symfony/assetic-bundle": "~2.8",

        "sulu/sulu": "dev-upgrade/symfony-3@dev",
        "sulu/theme-bundle": "1.1.*",
        "symfony-cmf/core-bundle": "@dev",
        "dantleech/phpcr-migrations-bundle": "~1.0",

        "nelmio/alice": "~2.2",
        "doctrine/doctrine-fixtures-bundle": "2.3.*",

        "zendframework/zend-stdlib": "~2.3",
        "zendframework/zendsearch": "@dev",

        "massive/build-bundle": "dev-upgrade/symfony-3",

        "jackalope/jackalope-doctrine-dbal": "~1.2.5",
        "jackalope/jackalope-jackrabbit": "~1.2.0",
        "oro/doctrine-extensions": "^1.0",

        "sulu/document-manager": "@dev",
        "symfony-cmf/routing-bundle": "@dev",
        "php-task/task-bundle": "@dev",
        "php-task/php-task": "@dev"
    },
    "require-dev": {
        "sensio/generator-bundle": "^3.0",
        "symfony/phpunit-bridge": "^3.0",
        "phpcr/phpcr-shell": "@beta",
        "behat/behat": "~3.2",
        "behat/mink-extension": "~2.2@dev",
        "behat/mink-selenium2-driver": "~1.3@dev",
        "behat/symfony2-extension": "~2.1@dev"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget",
            "Sulu\\Bundle\\TranslateBundle\\Composer\\TranslateScriptHandler::installTranslations",
            "Sulu\\Bundle\\MediaBundle\\Composer\\MediaScriptHandler::initBundle",
            "Massive\\Bundle\\SearchBundle\\Composer\\SearchScriptHandler::initBundle"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget",
            "Sulu\\Bundle\\TranslateBundle\\Composer\\TranslateScriptHandler::installTranslations",
            "Sulu\\Bundle\\MediaBundle\\Composer\\MediaScriptHandler::initBundle",
            "Massive\\Bundle\\SearchBundle\\Composer\\SearchScriptHandler::initBundle"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/chirimoya/sulu"
        },
        {
            "type": "vcs",
            "url": "https://github.com/wachterjohannes/sulu-document-manager"
        },
        {
            "type": "vcs",
            "url": "https://github.com/wachterjohannes/MassiveBuildBundle"
        },
        {
            "type": "vcs",
            "url": "https://github.com/wachterjohannes/routing-bundle"
        }
    ],
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": [
            {"file": "app/config/parameters.yml"},
            {"file": "app/config/phpcr.yml"}
        ]
    }
}
