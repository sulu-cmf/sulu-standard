<?xml version="1.0" encoding="utf-8"?>
<workspace xmlns="http://schemas.sulu.io/workspace/workspace"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://schemas.sulu.io/workspace/workspace http://schemas.sulu.io/workspace/workspace-1.0.xsd">

    <name>sulu.io</name>
    <key>sulu_io</key>

    <localizations>
        <localization language="en" shadow="auto">
            <localization language="en" country="us" shadow="auto"/>
        </localization>
        <localization language="de">
            <localization language="de" country="at"/>
        </localization>
    </localizations>

    <theme>
        <key>default</key>
        <excluded>
            <template>overview</template>
        </excluded>
    </theme>

    <portals>
        <portal>
            <name>sulu.io</name>
            <key>sulucmf_at</key>
            <resource-locator>
                <strategy>tree</strategy>
            </resource-locator>

            <localizations>
                <localization language="en" country="us"/>
            </localizations>

            <environments>
                <environment type="prod">
                    <urls>
                        <url language="de" country="at">www.sulu.io</url>
                        <url redirect="www.sulu.io">sulu.io</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url language="en" country="us">sulu.lo</url>
                        <url language="de" country="at">localhost</url>
                    </urls>
                </environment>
            </environments>
        </portal>
    </portals>
</workspace>
